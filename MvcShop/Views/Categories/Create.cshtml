@model MvcShop.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @{
            if (TempData.ContainsKey("ErrorMessage"))
            {
                <div style="background-color: #f8d7da; color: #721c24; padding: 10px; border: 1px solid #f5c6cb;">@TempData["ErrorMessage"]</div>
                <br>
            }
            else
            {
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @{
                    int parent_id = (int)ViewData["PId"];
                    <input type="hidden" asp-for="ParentId" value="@parent_id">
                    }
                    <div class="form-group">
                        <label asp-for="Category_Name" class="control-label"></label>
                        <input asp-for="Category_Name" class="form-control"/>
                        <span asp-validation-for="Category_Name" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary"/>
                    </div>
                    <br>
                </form>
            }
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
