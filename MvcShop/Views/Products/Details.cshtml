@model MvcShop.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        @{
            List<string> fieldAndValues=ViewBag.MyList;
            for (int i = 0; i < fieldAndValues.Count; i+=2)
            {
                <dt class="col-sm-2">
                    @fieldAndValues[i]
                </dt>
                <dd class="col-sm-10">
                    @fieldAndValues[i+1]
                </dd>
            }
            <dt class="col-sm-2">
                Category Name
            </dt>
            <dd class="col-sm-10">
                @ViewData["CatName"]
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product_Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.Image)" width="200px" height="250px">
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Products List</a>
    
</div>
