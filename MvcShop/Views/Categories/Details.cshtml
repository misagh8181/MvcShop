@model MvcShop.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        @{
            if ((string)ViewData["PId"] == "nothing")
            {
                <dt>
                    This is a head category :)
                </dt>
                <br><br>
            }
            else
            {
                <dt class="col-sm-2">
                    Parent Category Name
                </dt>
                <dd class="col-sm-10">
                    @ViewData["PId"]
                </dd>
            }
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category_Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
